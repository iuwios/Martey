{{ 'section-blockquote.css' | asset_url | stylesheet_tag }}

{% style %}
	{% render 'spaced-section' %}
	{% render 'spaced-section-inner' %}
{% endstyle %}

<div class="section-blockquote section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
	<div class="section-blockquote__container container">
		{% liquid
			case section.settings.heading_size
				when 'large'
					assign text_size = 'h2'
				when 'medium'
					assign text_size = 'h3'
				when 'small'
					assign text_size = 'h4'
				else
					assign text_size = ''
			endcase
		%}
		<h2 class="title {{ text_size }}">{{ section.settings.title }}</h2>
	</div>
</div>

{% schema %}
{
	"name": "t:sections.blockquote.name",
	"tag": "section",
	"class": "section",
	"enabled_on": {
		"templates": ["*"]
	},
	"settings": [
		{
			"type": "select",
			"id": "color_scheme",
			"options": [
				{
					"value": "background-1",
					"label": "t:sections.all.color_scheme.options__1.label"
				},
				{
					"value": "background-2",
					"label": "t:sections.all.color_scheme.options__2.label"
				},
				{
					"value": "background-3",
					"label": "t:sections.all.color_scheme.options__3.label"
				},
				{
					"value": "background-4",
					"label": "t:sections.all.color_scheme.options__4.label"
				},
				{
					"value": "background-5",
					"label": "t:sections.all.color_scheme.options__5.label"
				}
			],
			"default": "background-3",
			"label": "t:sections.instagram-collage.settings.color_scheme.label"
		},
		{
			"type": "richtext",
			"id": "title",
			"label": "t:sections.all.text.label",
			"default": "<p>Blockqoute</p>"
		},
		{
			"type": "select",
			"id": "heading_size",
			"label": "t:sections.all.heading.size.label",
			"default": "medium",
			"options": [
				{
					"value": "small",
					"label": "t:sections.all.heading.size.options__1.label"
				},
				{
					"value": "medium",
					"label": "t:sections.all.heading.size.options__2.label"
				},
				{
					"value": "large",
					"label": "t:sections.all.heading.size.options__3.label"
				}
			]
		},
		{
			"type": "header",
			"content": "t:sections.all.section-padding.header.content"
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 30,
			"max": 200,
			"step": 10,
			"default": 130,
			"unit": "px",
			"label": "t:sections.all.section-padding.padding_top.label"
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 30,
			"max": 200,
			"step": 10,
			"default": 160,
			"unit": "px",
			"label": "t:sections.all.section-padding.padding_bottom.label"
		},
		{
			"type": "header",
			"content": "t:sections.all.section-margin.header.content"
		},
		{
			"type": "range",
			"id": "margin_top",
			"min": 0,
			"max": 200,
			"step": 10,
			"default": 100,
			"unit": "px",
			"label": "t:sections.all.section-margin.margin_top.label"
		},
		{
			"type": "range",
			"id": "margin_bottom",
			"min": 0,
			"max": 200,
			"step": 10,
			"default": 100,
			"unit": "px",
			"label": "t:sections.all.section-margin.margin_bottom.label"
		}
	],
	"presets": [
		{
			"name": "t:sections.blockquote.name"
		}
	]
}
{% endschema %}
